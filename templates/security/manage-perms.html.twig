{% extends 'base.html.twig' %}

{% block title %}Manage Users{%  endblock %}

{% block body %}
<form action="{{ path('manage_perms') }}" method="post" class="roles">
<table class="user-table">
  <tr>
    <th>Username</th>
    <th>Email</th>
    <th>Has Admin</th>
  </tr>

  {% for user in users %}
    <tr>
      <td>{{ user.username }}</td>
      <td>{{ user.email }}</td>

      {% if user.roles.1 is defined %}
        <td><input type="checkbox" id="admin-{{ user.id }}" name="{{ user.id }}" value="admin" checked></td>
      {% else %}
        <td><input type="checkbox" id="admin-{{ user.id }}" name="{{ user.id }}" value="admin"></td>
      {% endif %}
    </tr>
  {% endfor %}
</table>
  <input type="submit" name="submit" value="Save" class="btn btn-primary mt-3">
</form>
{% endblock %}